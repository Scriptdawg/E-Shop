<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../app/head-app.ejs") %>
</head>
<body>
  <header>
    <%- include("../app/banner-app.ejs") %>
  </header>
  <%- include("../app/nav-app.ejs") %>

  <main class="container-subpage">
    <h2 class="title">Email Verification</h2>
    <p>Please check your email for a verification code.</p>
    <form method="POST" action="/auth/verify">
      <div>
        <input type="hidden" id="id" name="id" value="<%= id %>">
        <label for="verificationCode">Verification Code</label>
        <input type="text" id="verificationCode" name="verificationCode">
        <button type="submit">Verify</button>
      </div>
    </form>

    <% if (error) { %>
      <h3 class="title error">Errors:</h3>
      <p><%= error %></p>

      <form method="POST" action="/auth/verify/resend">
        <div>
          <input type="hidden" id="id" name="id" value="<%= id %>">
          <button type="submit">Resend Code</button>
        </div>
      </form>

    <% } %>
  </main>

<footer>
  <%- include('../app/footer-app.ejs') %>
</footer>
</body>
</html>
