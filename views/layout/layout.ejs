  <script defer src="/javascripts/fileUpload.js"></script>
</head>
<body>
  <div id="layout" class="layout">
    <!-- Main Navigation -->
    <%- include('top.ejs') %>
    <!-- Side Navigation -->
    <%- include('left.ejs') %>
    <!-- Sub-Pages-->
    <div id="middle">
      <%- body %>
    </div>
    <!-- Footer -->
    <%- include('bottom.ejs') %>
  </div>
