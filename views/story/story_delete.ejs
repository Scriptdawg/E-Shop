<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../app/head-app.ejs") %>
</head>
<body>
  <header>
    <%- include("../app/banner-app.ejs") %>
  </header>
  <%- include("../app/nav-app.ejs") %>

  <main class="container-subpage">

    <h2 class="title"><%= pageTitle %></h2>
    <h3 class="title"><%= story.name %></h3>
    <p>Do you really want to delete <%= story.name %>?</p>

    <form method="POST" action="">
      <input
        type="hidden"
        name="storyid"
        required="true"
        value="<%= story._id %>"
      >
      <button type="submit">Delete</button>
    </form>

    <br>
    <a href="/author/story/<%= story.url %>">Cancel</a>

    <% if(products) { %>
      <h3 class="title">Errors:</h3>
      <span class="error">This story is still assigned to:</span>
      <ul style="margin-inline: 16px">
        <% products.forEach(product => { %>
          <li><%= product.name %></li>
        <% }) %>
      </ul>
    <% } %>
    
  </main>

  <footer>
    <%- include('../app/footer-app.ejs') %>
  </footer>
</body>
</html>
