<h1 id="top"><%= pageTitle %></h1>

<% if(dog.coverImagePath) { %>
<img width="800" height="600" src="<%= dog.coverImagePath %>" />
<% } %>

<form method="POST" action="/member/cart/update">
  <input type="hidden" id="orderId" name="orderId" value="<%=dog.url %>" />
  <label for="quantity">Qty</label>
  <input
    type="number"
    id="quantity"
    name="quantity"
    value="1"
    min="1"
    max="99"
  />
  <button type="submit">Add to Cart</button>
</form>

<h2>Description:</h2>
<p><%= dog.description %></p>

<% if(dog.favoriteFood) { %>
<p>My favorite food is <%= dog.favoriteFood %>.</p>
<% } %>

<!-- Don't display Breed section if Unavailable or Other -->
<% if(dog.breed.name !== "Unavailable" && dog.breed.name !== "Other") { %>
<h2>Breed:</h2>
<p>I am a <%= dog.breed.name %>.</p>
<p><%= dog.breed.description %></p>
<% } %>
