<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../app/head-app.ejs") %>
  <link rel="stylesheet" href="/picture/stylesheets/index.css" />
  <title><%= title %> | <%= subpageName %></title>
</head>
<body>
  <header>
    <%- include("../app/banner-app.ejs") %>
  </header>
  <%- include("../app/nav-app.ejs") %>


  <main class="page-container">
    <h2 class="title"><%= pageTitle %></h2>

    <% if (roles && roles.includes("Author")) { %>
      <p><a href="/author/picture/create">Create New Picture</a></p>
    <% } %>

    <div class="container">
      <% pictures.forEach((picture)=> { %>
        <a href="picture/<%= picture.url %>">
          <h3 class="title"><%= picture.name %></h3>
          <% if(picture.coverImagePath) { %>
            <img
              width="600"
              height="400"
              src="<%= picture.coverImagePath %>"
              alt="<%= picture.name %> - database picture"
              title="<%= picture.name %>"
            >
          <% } %>
        </a>
      <% }); %>
    </div>
  </main>

  <footer>
    <%- include('../app/footer-app.ejs') %>
  </footer>
</body>
</html>
