<h1><%= pageTitle %></h1>

<form method="POST" action="">
  <label for="name">Name *</label><br />
  <input
    type="text"
    id="name"
    name="name"
    placeholder="Enter a name ..."
    value="<%= product.name %>"
  /><br /><br />

  <label for="cover">Cover</label>
  <input id="cover" name="cover" type="file" class="filepond" />

  <label for="story">Story *</label><br />
  <select id="story" name="story">
    <% if(!product.story) { %>
    <option value="" selected>Pick a story</option>
    <% } %> <% stories.forEach(story => { %> <% if(product.story && product.id ==
    product.story.id) { %>
    <option value="<%= story.id %>" selected><%= story.name %></option>
    <% } else { %>
    <option value="<%= story.id %>"><%= story.name %></option>
    <% } %> <% }) %></select
  ><br /><br />

  <label for="favoriteFood">Favorite Food</label><br />
  <input
    type="text"
    id="favoriteFood"
    name="favoriteFood"
    placeholder="Enter a food ..."
    value="<%= product.favoriteFood %>"
  /><br /><br />

  <label for="description">Description *</label><br />
  <textarea id="description" name="description"><%= product.description %></textarea
  ><br /><br />

  <button type="submit">Submit</button>
</form>

<p><i>* required</i></p>

<% if(errors && errors !=='' ) { %>
<h2 style="color: red">Errors:</h2>
<ul>
  <% errors.forEach(error=> { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
