<div id="container-subpage-product_delete" class="container-subpage">
  <main>

    <h2 class="title large"><%= pageTitle %></h2>
    <h3 class="title"><%= product.name %></h3>
    <p>Do you really want to delete <%= product.name %>?</p>

    <form method="POST" action="/author/product/delete">
      <input
        type="hidden"
        name="productid"
        required="true"
        value="<%= product._id %>"
      />
      <button type="submit">Delete</button>
    </form>

    <br />
    <a href="/author/product/<%= product.url %>">Cancel</a>

  </main>
</div>
